<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      throwConfigExceptions="false">

	<!-- Define the log levels -->
	<rules>
		<logger name="*" minlevel="Info" writeTo="console" />
		<logger name="*" minlevel="Debug" writeTo="file" />
	</rules>

	<!-- Define the console target -->
	<targets>
		<target xsi:type="ConsoleTarget" name="console" layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=ToString}" />
		<target xsi:type="FileTarget" name="file" fileName="${basedir}/logs/addressbook.log"
				layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=ToString}" />
	</targets>
</nlog>
